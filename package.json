{
  "name": "mvc-pattern-express",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development bun --watch src/index.ts",
    "build": "NODE_ENV=production bun build ./src/index.ts --outdir ./dist --minify --target bun --sourcemap=none",
    "start": "NODE_ENV=production bun run ./dist/index.js",
    "start:dev": "NODE_ENV=development bun run ./dist/index.js",
    "db:test:push": "bun run --env-file=.env.test drizzle-kit push --force",
    "test": "NODE_ENV=test bun test",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepare": "husky",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push --force",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/db/seed.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@faker-js/faker": "^10.1.0",
    "@types/bun": "1.3.4",
    "@types/compression": "^1.8.1",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/node": "25.0.3",
    "@types/pino": "7.0.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "8.50.0",
    "@typescript-eslint/parser": "8.50.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "prettier": "3.7.4",
    "supertest": "^7.1.4",
    "typescript-eslint": "^8.50.0"
  },
  "peerDependencies": {
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.2.0",
    "compression": "^1.8.1",
    "cors": "2.8.5",
    "dotenv": "17.2.3",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "express": "5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "8.1.0",
    "pino": "10.1.0",
    "pino-http": "11.0.0",
    "postgres": "^3.4.7",
    "swagger-ui-express": "^5.0.1",
    "zod": "4.2.1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "bun test --bail"
    ]
  }
}
